<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Peluqueria.DetallesServicio"
             Title="DetallesServicio">

    <StackLayout Padding="10">
        <!-- Mostrar la imagen del servicio -->
        <Image Source="{Binding detalleServicios.Imagen}" 
               HeightRequest="200" 
               HorizontalOptions="Center" />

        <!-- Mostrar el nombre del servicio -->
        <Label Text="{Binding detalleServicios.Nombre}" 
               FontSize="Large" 
               FontAttributes="Bold" 
               HorizontalOptions="Center" 
               Margin="10" />

        <!-- Mostrar la calificaciÃ³n del servicio -->
        <Label Text="{Binding detalleServicios.Calificacion}" 
               FontSize="Medium" 
               HorizontalOptions="Center" />
    </StackLayout>
</ContentPage>